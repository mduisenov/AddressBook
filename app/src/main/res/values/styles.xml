<resources>

    <!-- Base application theme. -->

    <style name="Widget.U2020.ProgressBar" parent="None">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">900</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="Theme.AddressBookTheme.NoActionBar" parent="@style/Theme.AddressBookTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AddressBookTheme.LaunchScreen" parent="@style/Theme.AddressBookTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_launch_screen</item>
    </style>

    <style name="Button" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4.0dip</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
        <item name="android:layout_marginTop">2.0dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextPrimaryStyle" parent="@style/EditTextStyle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="TextSecondaryStyle" parent="@style/EditTextStyle">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EmployeeHeaderTV" parent="@style/None">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/textColorHint</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EmployeeTV" parent="@style/EmployeeHeaderTV">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_profile_tv</item>

        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
